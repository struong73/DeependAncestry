@using DeependAncestry.Web.Models
@model DeependAncestry.Web.Models.SearchFieldsViewModel

@{
    ViewBag.Title = "DeepAncestry - Advanced Search";
}

<h1>Deepend<strong>Ancestry</strong></h1>

<div class="row">
    @using (Ajax.BeginForm("GetResults", "Advanced", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "resultSection" }))
    {
        <div class="col-md-5">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div>
                <div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    <div style="float:right;"><input type="submit" class="btn btn-default" value="Advanced Search" /></div>
                </div>
            </div>
            <div>&nbsp;</div>
            <div>Gender: &nbsp;&nbsp; 
                @{
                    foreach (GenderViewModel gender in ViewBag.GenderList)
                    {
                        <label class="checkbox-inline">
                            <input type="checkbox" id="Gender" name="Gender" class="chkclass" value="@gender.Gender" @gender.IsSelected />
                            @gender.GenderName
                        </label>
                    }
                }
                <div style="float:right;"><a href="/" class="elements"><span>Simple search</span></a></div>
            </div>
            <div>&nbsp;</div>
            <div>
                Direction: &nbsp;&nbsp;
                @{
                    foreach (DirectionViewModel direction in ViewBag.DirectionList)
                    {
                        <label class="radio-inline">
                            <input type="radio" id="Direction" name="Direction" class="chkclass" value="@direction.Direction" @direction.IsSelected />
                            @direction.DirectionName
                        </label>
                    }
                }
            </div>
        </div>
    }
</div>

    <div>&nbsp;</div>

    <div id="resultSection">
        @Html.Partial("_ResultPartial", Model)
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}